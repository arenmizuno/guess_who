<head>
  <title>List of All Characters</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.css">
</head>

<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">List of All Characters</h1>

    <!-- Form to create new character -->
    <form action="/insert_character_record" method="post" enctype="multipart/form-data" class="mb-5">
      <!-- Centered container for the form -->
      <div class="d-flex justify-content-center mb-3">
        <div class="w-50">
          <label for="name_field" class="form-label">Name</label>
          <input id="name_field" type="text" name="name" class="form-control">
        </div>
      </div>

      <!-- Centered container for the file input -->
      <div class="d-flex justify-content-center mb-3">
        <div class="w-50">
          <label for="photo_field" class="form-label">Photo</label>
          <input id="photo_field" type="file" name="photo" class="form-control">
        </div>
      </div>

      <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-success">Create Character</button>
      </div>
    </form>

    <!-- Horizontal line styled to match the table width -->
    <hr style="width: 50%; margin-left: auto; margin-right: auto;">

    <!-- Table of characters -->
    <div class="table-responsive">
      <table class="table table-bordered text-center">
        <thead>
          <tr>
            <th class="text-center">Photo</th>
            <th class="text-center">Name</th>
            <th class="text-center">User</th>
            <th class="text-center">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% if @list_of_characters.present? %>
            <% @list_of_characters.each do |character| %>
              <tr>
                <td class="text-center align-middle">
                  <% if character.photo.attached? %>
                    <%= image_tag character.photo, style: "width: 150px; height: auto;" %>
                  <% else %>
                    No image available
                  <% end %>
                </td>
                <td class="text-center align-middle"><%= character.name %></td>
                <td class="text-center align-middle"><%= character.user.email %></td>
                <td class="text-center align-middle">
                  <a href="/characters/<%= character.id %>" class="btn btn-secondary btn-sm">Edit</a>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr><td colspan="4">No characters found.</td></tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Add Bootstrap's JS and Popper.js -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"></script>
</body>
