<head>
  <title>Character Details</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.css">
</head>

<body>
  <div class="container mt-5">
    <!-- Heading -->
    <h1 class="text-center mb-4">Character #<%= @the_character.id %> Details</h1>

    <!-- Navigation buttons with reduced gap -->
    <div class="d-flex justify-content-center gap-2 mb-4">
      <a href="/characters" class="btn btn-primary">Go back</a>
      <a href="/delete_character/<%= @the_character.id %>" class="btn btn-danger">Delete character</a>
    </div>

    <!-- Centered and longer HR -->
    <hr style="width: 90%; margin-left: auto; margin-right: auto;" class="mb-5">

    <!-- Character modification form, inputs centered -->
    <form action="/modify_character_record/<%= @the_character.id %>" method="post" enctype="multipart/form-data" class="mb-5">
      <div class="d-flex justify-content-center mb-3">
        <div class="w-50">
          <label for="name_field" class="form-label">Name</label>
          <input id="name_field" type="text" name="name" value="<%= @the_character.name %>" class="form-control">
        </div>
      </div>

      <div class="d-flex justify-content-center mb-3">
        <div class="w-50">
          <label for="photo_field" class="form-label">Photo</label>
          <input id="photo_field" type="file" name="photo" class="form-control">
        </div>
      </div>

      <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-success">Update character</button>
      </div>
    </form>

    <!-- Centered and longer HR -->
    <hr style="width: 90%; margin-left: auto; margin-right: auto;" class="mb-5">

    <!-- Character details in table format -->
    <table class="table table-bordered text-center">
      <thead>
        <tr>
          <th class="text-center">Photo</th>
          <th class="text-center">Name</th>
          <th class="text-center">User</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="text-center align-middle">
            <% if @the_character.photo.attached? %>
              <%= image_tag @the_character.photo, style: "width: 150px; height: auto;" %>
            <% else %>
              No image available
            <% end %>
          </td>
          <td class="text-center align-middle"><%= @the_character.name %></td>
          <td class="text-center align-middle"><%= @the_character.user.email %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <!-- Add Bootstrap's JS and Popper.js -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"></script>
</body>
