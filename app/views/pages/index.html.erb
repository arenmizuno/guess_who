<head>
  <title>Guess Who!</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.css">
</head>

<body>
  <!-- Main content area with flexbox layout to center and spread content -->
  <div class="d-flex flex-column justify-content-center min-vh-100 mt-1 pt-1">
    <h1 class="text-center mb-4">Guess Who!</h1>

    <p class="text-center mb-5">This is an online version of Guess Who where you can add your own characters!</p>

    <!-- Centered HR element -->
    <hr class="mb-5 mx-auto" style="width: 50%;">

    <div class="container">
      <% if user_signed_in? %>
        <div class="d-flex justify-content-center gap-4 mb-5">
          <a href="/start_game" class="btn btn-success">Start Game</a>
          <a href="/characters" class="btn btn-success">Character List</a>
        </div>
      <% else %>
        <p class="text-center">You must be <a href="/users/sign_in">signed in</a> to start a game or view the character list.</p>
      <% end %>
    </div>
  </div>

  <!-- Add Bootstrap's JS and Popper.js -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"></script>
</body>
